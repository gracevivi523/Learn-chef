[mysql]
# CLIENT #
port                           = 3306
socket                         = /var/lib/mysql/mysql.sock

[mysqld]
# GENERAL #
user                           = mysql
default-storage-engine         = InnoDB
net_write_timeout              = 600
socket                         = /var/lib/mysql/mysql.sock
pid-file                       = /var/lib/mysql/mysql.pid

# MyISAM #
join_buffer_size               = 1M
key-buffer-size                = 32M
myisam-recover                 = FORCE,BACKUP

# SAFETY #
max-allowed-packet             = 16M
max-connect-errors             = 1000000
sysdate-is-now                 = 1
innodb                         = FORCE
# innodb-strict-mode             = 1 UNSUPPORTED

# DATA STORAGE #
datadir                        = /var/lib/mysql/

# BINARY LOGGING #
auto-increment-increment       = 2
auto-increment-offset          = 1
binlog_format                 = 'STATEMENT' # when using binary logs in replication - enabled back due to replication issue
#binlog_format                  = 'MIXED' # when using binary logs in replication
log-bin                        = /var/lib/mysql/mysql-bin
expire-logs-days               = 10
sync-binlog                    = 0 

# CACHES AND LIMITS #
tmp-table-size                 = 32M
max-heap-table-size            = 32M
query-cache-type               = 1 
query-cache-size               = 64M
max-connections                = 500
thread-cache-size              = 50
open-files-limit               = 65535
table-definition-cache         = 4096
table-open-cache               = 4096

# INNODB #
innodb-flush-method            = O_DIRECT
innodb_log_buffer_size         = 8M
innodb-log-files-in-group      = 2
innodb-log-file-size           = 512M
innodb-flush-log-at-trx-commit = 2
innodb-file-per-table          = 1
innodb-buffer-pool-size        = 3G
# innodb_write_io_threads        = 8 UNSUPPORTED
# innodb_read_io_threads         = 8 UNSUPPORTED

# LOGGING #
log-error                      = /var/log/mysqld.log
log-queries-not-using-indexes  = 1
slow-query-log                 = 0 
##slow-query-log-file          = /var/log/mysql-slow.log
slow-query-log-file            = /backup/mysql-slow-query-opsview.log
long_query_time                = 4

# Replication
server_id                      = 1

